rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read their own user document
      allow read: if isOwner(userId);

      // Only the user can create their own document
      allow create: if isOwner(userId);

      // Only the user can update their own document
      allow update: if isOwner(userId);

      // No one can delete users (except admin via backend)
      allow delete: if false;
    }

    // Doctors collection
    match /doctors/{doctorId} {
      // Anyone authenticated can read doctor list (for patient to select)
      allow read: if isAuthenticated();

      // Only the doctor can create their own profile
      allow create: if isOwner(doctorId);

      // Only the doctor can update their own profile
      allow update: if isOwner(doctorId);

      // No deletion
      allow delete: if false;
    }

    // Patients collection
    match /patients/{patientId} {
      // Patient can read their own data, doctors can read their patients
      allow read: if isOwner(patientId) || getUserRole() == 'doctor';

      // Only the patient can create their own profile
      allow create: if isOwner(patientId);

      // Only the patient can update their own profile
      allow update: if isOwner(patientId);

      // No deletion
      allow delete: if false;
    }

    // Assessments collection
    match /assessments/{assessmentId} {
      // Patient can read their own assessments, doctor can read their assigned assessments
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );

      // Only patients can create assessments
      allow create: if isAuthenticated() &&
        request.resource.data.patientId == request.auth.uid;

      // Only the assigned doctor can update (for review)
      allow update: if isAuthenticated() &&
        resource.data.doctorId == request.auth.uid;

      // No deletion
      allow delete: if false;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Only the recipient can read their notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Server creates notifications (via backend with admin SDK)
      allow create: if false;

      // Only the recipient can mark as read
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Only the recipient can delete their notifications
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
